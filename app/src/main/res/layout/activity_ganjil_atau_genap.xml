<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GanjilAtauGenapActivity">

    <EditText
        android:id="@+id/inputBilangan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan bilangan bulat"
        android:inputType="number"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Tombol Cek -->
    <Button
        android:id="@+id/btnCek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cek Ganjil/Genap"
        android:backgroundTint="#16325B"
        app:layout_constraintTop_toBottomOf="@id/inputBilangan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Output Hasil -->
    <TextView
        android:id="@+id/outputHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil: "
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnCek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>