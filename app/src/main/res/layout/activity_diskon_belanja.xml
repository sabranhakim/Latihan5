<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiskonBelanjaActivity">

    <EditText
        android:id="@+id/inputTotalBelanja"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan total belanja"
        android:inputType="numberDecimal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnHitungDiskon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Diskon"
        android:backgroundTint="#16325B"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/inputTotalBelanja"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/outputDiskon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diskon: "
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnHitungDiskon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/outputTotalBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bayar: "
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/outputDiskon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>